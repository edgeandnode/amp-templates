#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/maxwellbrown/Code/github.com/consulting/edge-and-node/amp-templates/examples/vite-react/electricsql/portfolio-dapp-reth" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/maxwellbrown/Code/github.com/consulting/edge-and-node/amp-templates/examples/vite-react/electricsql/portfolio-dapp-reth")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/maxwellbrown/Code/github.com/consulting/edge-and-node/amp-templates/examples/vite-react/electricsql/portfolio-dapp-reth" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/maxwellbrown/Code/github.com/consulting/edge-and-node/amp-templates/examples/vite-react/electricsql/portfolio-dapp-reth/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/maxwellbrown/Code/github.com/consulting/edge-and-node/amp-templates/examples/vite-react/electricsql/portfolio-dapp-reth/.envrc" "/Users/maxwellbrown/Code/github.com/consulting/edge-and-node/amp-templates/examples/vite-react/electricsql/portfolio-dapp-reth/.direnv"/*.rc
