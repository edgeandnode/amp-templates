{
  "name": "@edgeandnode/amp-templates",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Monorepo containing Amp example apps and Create Amp utility",
  "repository": {
    "type": "git",
    "url": "https://github.com/edgeandnode/amp-templates"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/**' build",
    "dev": "pnpm -r --filter './packages/**' dev",
    "clean": "pnpm -r --filter './packages/**' exec rm -rf dist node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "pnpm --recursive --parallel --filter \"./packages/*\" run lint",
    "lint:fix": "pnpm --recursive --parallel --filter \"./packages/*\" run lint:fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  },
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.21.0"
  }
}
