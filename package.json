{
  "name": "@edgeandnode/amp-templates",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Monorepo containing Amp example apps and Create Amp utility",
  "repository": {
    "type": "git",
    "url": "https://github.com/edgeandnode/amp-templates"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/**' build",
    "dev": "pnpm -r --filter './packages/**' dev",
    "clean": "pnpm -r --filter './packages/**' exec rm -rf dist node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint \"packages/**/*.{ts,tsx,js,jsx}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-perfectionist": "^3.3.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.22.0",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
