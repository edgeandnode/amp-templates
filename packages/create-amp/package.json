{
  "name": "@edgeandnode/create-amp",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "description": "Command-line interface tool to scaffold applications utilizing amp, built off predefined templates.",
  "repository": {
    "type": "git",
    "url": "https://github.com/edgeandnode/amp-templates",
    "directory": "packages/create-amp"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist",
    "linkDirectory": false
  },
  "bin": {
    "create-amp": "./dist/bun.js",
    "ca": "./dist/bun.js"
  },
  "files": [
    "dist",
    "llms.txt",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "Amp",
    "The Graph",
    "Web3",
    "Blockchain"
  ],
  "scripts": {
    "dev": "NODE_ENV=development pnpx tsx ./src/bin.ts",
    "build": "tsdown && pnpm run copy-all",
    "copy-packagejson": "tsx scripts/copy-package-json.ts",
    "copy-readme": "cp README.md dist/README.md",
    "copy-changelog": "cp CHANGELOG.md dist/CHANGELOG.md",
    "copy-llms": "cp llms.txt dist/llms.txt",
    "copy-all": "pnpm run copy-packagejson && pnpm run copy-readme && pnpm run copy-changelog && pnpm run copy-llms",
    "clean": "rimraf dist/*",
    "check": "tsc -b tsconfig.json",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,mjs}\"",
    "lint:fix": "pnpm lint --fix",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "copy-package-json": "tsx scripts/copy-package-json.ts"
  },
  "devDependencies": {
    "@effect/cli": "^0.71.0",
    "@effect/language-service": "latest",
    "@effect/platform": "^0.92.1",
    "@effect/platform-node": "^0.98.4",
    "@effect/vitest": "^0.26.0",
    "effect": "^3.18.4",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">=22"
  }
}
