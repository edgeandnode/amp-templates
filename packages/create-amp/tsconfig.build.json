{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.jsonc",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": false,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "templates"]
}
